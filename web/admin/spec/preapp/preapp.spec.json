{

    "name": "Preapp",
    "description": "A splash-y first-time experience that informs college students of several u.guru value props over the course of the semester",
    "views": {
        "splashLoader": {
            "rubric": {
                "ui": {
                    "static": true,
                    "responsive": true,
                    "animated": false,
                    "glitch-free": false,
                    "cross-platform": false,
                    "verified" : false,
                    "analysis": false
                },
                "functional": {
                    "pre": {
                        "debug": ["easing"],
                        "components": ["text", "svg", "progress"]
                    }
                },
                "states": {
                    "onEnter": {
						"portal": {
							"animation": "scaleXIn",
							"easing": "",
							"updated": true,
							"notes": ""
						},
						"logo": {
							"animation": "bounceInUp",
							"easing": "easeOutBack",
							"updated": true,
							"notes": ""
						},
						"guru": {
							"animation": "bounceInUp",
							"easing": "easeOutBack",
							"updated": true,
							"notes": ""
						}
					},
                    "onProgressStart": {
						"ring": {
							"animation": ["drawIn", "category color transition"],
							"easing": "linear",
							"updated": false,
							"notes": {
								"GW": "May require a state for each color",
								"JO": ""
							}
						},
						"guru": {
							"animation": "bounce 3x",
							"updated": false,
							"notes": {
								"GW": "May require 3+ states -or- alternate, but check alternate first",
								"JO": ""
							}
						},
					},
					"onProgressEnd": {
						"guru": {
							"animation": "bounceOutDown or easeInBack",
							"updated": true
						},
						"logo": "bounceOutDown or easeInBack",
						"portal": "flipOpen"
					},
					"onWarpTransitionStart": {
						"portal": "clip-path or scaleInUp",
						"stars": "translateZIn",
					}
                }
            }
        }
    }
}

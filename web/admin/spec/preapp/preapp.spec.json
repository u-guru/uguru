{

    "name": "Preapp",
    "description": "A splash-y first-time experience that informs college students of several u.guru value props over the course of the semester",
    "views": {
        "splashLoader": {
            "rubric": {
                "ui": {
                    "static": true,
                    "responsive": true,
                    "animated": false,
                    "glitch-free": false,
                    "cross-platform": false,
                    "verified" : false,
                    "analysis": false
                },
                "functional": {
                    "pre": {
                        "debug": ["easing"],
                        "components": ["text", "svg", "progress"]
                    }
                },
                "states": {
                    "onEnter": {
						"portal": "scaleXIn",
						"logo": "bounceInUp or easeOutBack",
						"guru": "bounceInUp or easeOutBack"
					},
                    "onProgressStart": {
						"ring": ["drawIn", "category color transition"],
						"guru": "bounce 3x",
					},
					"onProgressEnd": {
						"guru": "bounceOutDown or easeInBack",
						"logo": "bounceOutDown or easeInBack",
						"portal": "flipOpen"
					},
					"onWarpTransitionStart": {
						"portal": "clip-path or scaleInUp",
						"stars": "translateZIn",
					}
                }
            }
        }
    }
}

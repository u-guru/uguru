{

    "name": "Preapp",
    "description": "A splash-y first-time experience that informs college students of several u.guru value props over the course of the semester",
    "views": {
        "splashLoader": {
            "rubric": {
                "ui": {
                    "static": true,
                    "responsive": true,
                    "animated": false,
                    "glitch-free": false,
                    "cross-platform": false,
                    "verified" : false,
                    "analysis": false
                },
                "functional": {
                    "animation": {
                        "import": {"status": false},
                        "export": {"status": false},
                        "visual": {"status": false},
                        "bounceJS + extended functionaility": {"status": false}
                    },
                    "HTML tools/API enhancements": {
                        "components": ["svg", "letter/word"]
                    },
                    "If time": {
                        "animation": "infinite",
                        "user-story timeline": "dispatch events in the middle of a state",
                        "interpolate": "Stagger anything"
                    }
                },
                "states": {
                    "onEnter": {
						"portal": {
							"animation": "scaleXIn",
							"easing": "",
							"updated": false,
							"complete": false,
							"notes": {}
						},
						"logo": {
							"animation": "bounceInUp",
							"easing": "easeOutBack",
							"updated": true,
							"complete": false,
							"notes": {}
						},
						"guru": {
							"animation": "bounceInUp",
							"easing": "easeOutBack",
							"updated": true,
							"complete": false,
							"notes": {}
						}
					},
                    "onProgressStart": {
						"ring": {
							"animation": ["drawIn", "category color transition"],
							"easing": "linear",
							"updated": false,
							"complete": false,
							"notes": {
								"GW": "May require a state for each color",
								"JO": ""
							}
						},
						"guru": {
							"animation": "bounce 3x",
							"easing": "",
							"updated": false,
							"complete": false,
							"notes": {
								"GW": "May require 3+ states -or- alternate, but check alternate first",
								"JO": ""
							}
						}
					},
					"onProgressEnd": {
						"guru": {
							"animation": "bounceOutDown",
							"easing": "easeInBack",
							"updated": true,
							"complete": false,
							"notes": {}
						},
						"logo": {
							"animation": "bounceOutDown",
							"easing": "easeInBack",
							"updated": true,
							"complete": false,
							"notes": {}
						},
						"portal": {
							"animation": "flipOpen",
							"easing": ["easeOutSine", "easeOutBack", "easeInBack"],
							"updated": true,
							"complete": false,
							"notes": {}
						}
					},
					"onWarpTransitionStart": {
						"portal": {
							"animation": ["clipPathIn", "scaleInUp"],
							"easing": ["easeInBack", "easeInExpo"],
							"updated": false,
							"complete": false,
							"notes": {
								"GW": "scaleInUp in the case that clipPathIn isn't cross-platform. See codrops",
								"JO": "Try easeInOutBack or some -InOut- for a gravitating ease"
							}
						},
						"stars": {
							"animation": "translateZIn",
							"easing": "linear",
							"updated": false,
							"complete": false,
							"notes": {
								"GW": "Check whether prop or class would work better in this case (see HIW clouds)",
								"JO": "Like the idea of them 'speeding up' as user goes through the portal. Would like a friction transform effect (ex.https://dribbble.com/shots/2535126-Light-Speed, https://dribbble.com/shots/2082444-Stone-Raiders-Light-Test) on either the stars or the chips/text flying through the stars"
							}
						}
					}
                }
            }
        }
    }
}

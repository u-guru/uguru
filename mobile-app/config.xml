<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.beta.college.Uguru" version="1.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Uguru</name>
  <description>
        A peer-to-peer tutoring platform
    </description>
  <author email="samir@uguru.me" href="http://uguru.me">
      Uguru team
    </author>
  <access origin="*"/>
  <content src="remote/local.index.html"/>
  <preference name="orientation" value="portrait"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="local"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
  <platform name="android">
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000"/>
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF"/>
    <icon src="icons/android/drawable-ldpi/ic_launcher.png" density="ldpi"/>
    <icon src="icons/android/drawable-mdpi/ic_launcher.png" density="mdpi"/>
    <icon src="icons/android/drawable-hdpi/ic_launcher.png" density="hdpi"/>
    <icon src="icons/android/drawable-xhdpi/ic_launcher.png" density="xhdpi"/>
    <icon src="icons/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi"/>
    <icon src="icons/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>
    <splash src="resources/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi"/>
    <splash src="resources/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi"/>
    <splash src="resources/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
    <splash src="resources/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi"/>
    <splash src="resources/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi"/>
    <splash src="resources/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi"/>
  </platform>
  <platform name="ios">
    <icon src="icons/ios/Icon-60.png" width="60" height="60"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-60@2x.png" width="120" height="120"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-60@3x.png" width="180" height="180"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-76.png" width="76" height="76"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-76@2x.png" width="152" height="152"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-40.png" width="40" height="40"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-40@2x.png" width="80" height="80"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-40@3x.png" width="120" height="120"/>
    <icon src="icons/ios/Icon.png" width="57" height="57"/>
    <icon src="icons/ios/Icon@2x.png" width="114" height="114"/>
    <icon src="icons/ios/Icon-72.png" width="72" height="72"/>
    <icon src="icons/ios/Icon-72@2x.png" width="144" height="144"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-Small.png" width="29" height="29"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-Small@2x.png" width="58" height="58"/>
    <icon src="icons/ios/AppIcon.appiconset/Icon-Small@3x.png" width="87" height="87"/>
    <splash src="icons/ios/launch/Default.png" width="320" height="480"/>
    <splash src="icons/ios/launch/Default@2x.png" width="640" height="960"/>
    <splash src="icons/ios/launch/Default-Portrait@2x.png" width="640" height="960"/>
    <splash src="icons/ios/launch/Default-Portrait-736h@3x.png" width="1242" height="2208"/>
    <splash src="icons/ios/launch/Default-568h@2x.png" width="640" height="1136"/>
    <splash src="icons/ios/launch/Default-667h@2x.png" width="750" height="1334"/>
  </platform>
  <platform name="browser">
    <preference name="SplashScreen" value="www/remote/img/uguru_home.png"/>
    <preference name="SplashScreenDelay" value="10000"/>
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF"/>
    <preference name="ShowSplashScreen" value="false"/>
    <preference name="SplashScreenWidth" value="600"/>
    <preference name="SplashScreenHeight" value="300"/>
  </platform>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
</widget>
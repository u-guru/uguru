<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.beta.college.Uguru" version="1.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Uguru</name>
  <description>
        A peer-to-peer tutoring platform
    </description>
  <author email="samir@uguru.me" href="http://uguru.me">
      Uguru team
    </author>
  <content src="remote/local.index.html"/>
  <access origin="*"/>
  <allow-navigation href="*"/>
  <allow-navigation href="https://*/*"/>
  <allow-navigation href="data:*"/>
  <preference name="orientation" value="portrait"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="local"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="FadeSplashScreen" value="false"/>
  <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarStyle" value="lightcontent"/>
  <preference name="CrosswalkAnimatable" value="false"/>
  <preference name="xwalkVersion" value="14+"/>
  <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect"/>
  <preference name="xwalkMode" value="embedded"/>
  <platform name="android">
    <preference name="Fullscreen" value="false"/>
    <preference name="android-windowSoftInputMode" value="adjustPan"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="20000"/>
    <feature name="Camera">
      <param name="android-package" value="org.apache.cordova.camera.CameraLauncher"/>
    </feature>
    <icon density="ldpi" src="icons/android/drawable-ldpi/ic_launcher.png"/>
    <icon density="mdpi" src="icons/android/drawable-mdpi/ic_launcher.png"/>
    <icon density="hdpi" src="icons/android/drawable-hdpi/ic_launcher.png"/>
    <icon density="xhdpi" src="icons/android/drawable-xhdpi/ic_launcher.png"/>
    <icon density="xxhdpi" src="icons/android/drawable-xxhdpi/ic_launcher.png"/>
    <icon density="xxxhdpi" src="icons/android/drawable-xxxhdpi/ic_launcher.png"/>
    <splash density="land-ldpi" src="resources/android/splash/drawable-land-ldpi-screen.png"/>
    <splash density="land-mdpi" src="resources/android/splash/drawable-land-mdpi-screen.png"/>
    <splash density="land-hdpi" src="resources/android/splash/drawable-land-hdpi-screen.png"/>
    <splash density="port-ldpi" src="resources/android/splash/drawable-port-ldpi-screen.png"/>
    <splash density="port-mdpi" src="resources/android/splash/drawable-port-mdpi-screen.png"/>
    <splash density="port-hdpi" src="resources/android/splash/drawable-port-hdpi-screen.png"/>
  </platform>
  <platform name="ios">
    <icon height="60" src="icons/ios/Icon-60.png" width="60"/>
    <icon height="120" src="icons/ios/AppIcon.appiconset/Icon-60@2x.png" width="120"/>
    <icon height="180" src="icons/ios/AppIcon.appiconset/Icon-60@3x.png" width="180"/>
    <icon height="76" src="icons/ios/AppIcon.appiconset/Icon-76.png" width="76"/>
    <icon height="152" src="icons/ios/AppIcon.appiconset/Icon-76@2x.png" width="152"/>
    <icon height="40" src="icons/ios/AppIcon.appiconset/Icon-40.png" width="40"/>
    <icon height="80" src="icons/ios/AppIcon.appiconset/Icon-40@2x.png" width="80"/>
    <icon height="120" src="icons/ios/AppIcon.appiconset/Icon-40@3x.png" width="120"/>
    <icon height="57" src="icons/ios/Icon.png" width="57"/>
    <icon height="114" src="icons/ios/Icon@2x.png" width="114"/>
    <icon height="72" src="icons/ios/Icon-72.png" width="72"/>
    <icon height="144" src="icons/ios/Icon-72@2x.png" width="144"/>
    <icon height="29" src="icons/ios/AppIcon.appiconset/Icon-Small.png" width="29"/>
    <icon height="58" src="icons/ios/AppIcon.appiconset/Icon-Small@2x.png" width="58"/>
    <icon height="87" src="icons/ios/AppIcon.appiconset/Icon-Small@3x.png" width="87"/>
    <splash height="480" src="icons/ios/launch/Default.png" width="320"/>
    <splash height="960" src="icons/ios/launch/Default@2x.png" width="640"/>
    <splash height="960" src="icons/ios/launch/Default-Portrait@2x.png" width="640"/>
    <splash height="2208" src="icons/ios/launch/Default-Portrait-736h@3x.png" width="1242"/>
    <splash height="1136" src="icons/ios/launch/Default-568h@2x.png" width="640"/>
    <splash height="1334" src="icons/ios/launch/Default-667h@2x.png" width="750"/>
  </platform>
  <platform name="browser">
    <preference name="SplashScreen" value="www/remote/img/uguru_home.png"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <preference name="SplashScreenBackgroundColor" value="#FFFFFF"/>
    <preference name="ShowSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <preference name="SplashScreenWidth" value="600"/>
    <preference name="SplashScreenHeight" value="300"/>
  </platform>
  <feature name="StatusBar">
    <param name="ios-package" onload="true" value="CDVStatusBar"/>
  </feature>
</widget>